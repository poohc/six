<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="login">
    
    <select id="chkLoginId" parameterType="String" resultType="Integer">
		SELECT COUNT(*)
		  FROM SIX_MEMBER               
		 WHERE ID = #{id}		   
    </select>
    
    <select id="chkLoginPassword" parameterType="String" resultType="String">
		SELECT PASSWORD
		  FROM SIX_MEMBER               
		 WHERE ID = #{id}		   
    </select>    
    
</mapper>